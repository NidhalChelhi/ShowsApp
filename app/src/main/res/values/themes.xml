<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ShowsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/gray_200</item>
        <item name="colorOnSurfaceVariant">@color/gray_600</item>

        <!-- Error colors -->
        <item name="colorError">@color/red_500</item>
        <item name="colorOnError">@color/white</item>

        <!-- Outline -->
        <item name="colorOutline">@color/gray_400</item>

        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.ShowsApp.Button</item>

        <!-- Font family -->
        <item name="android:fontFamily">@font/dm_sans</item>
        <item name="fontFamily">@font/dm_sans</item>

        <!-- Text appearance styles -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.ShowsApp.Headline.Large</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.ShowsApp.Headline.Medium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.ShowsApp.Headline.Small</item>


        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Button style -->
    <style name="Widget.ShowsApp.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.ShowsApp.Headline.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/dm_sans</item>
    </style>

    <style name="TextAppearance.ShowsApp.Headline.Medium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/dm_sans</item>
    </style>

    <style name="TextAppearance.ShowsApp.Headline.Small" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/dm_sans</item>
    </style>

</resources>